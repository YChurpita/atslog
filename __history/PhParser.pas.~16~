function TphParser.IfMobile: Boolean;
var
i:integer ;
ph1,ph2,ph3:string ;
begin
 result:=false ;
 ph1:=  FphNamber ;
 SetLength( ph1, 2);

 FMobphCode:= MainForm.L_mobOpList ;

  for I := Low (FMobphCode) to High (FMobphCode) do
    begin
     ph2:=FMobphCode[I].Fcode ;
     ph3:=FMobphCode[I].Fcode ;

     SetLength( ph2, 1);

     if ph2='0' then
        begin
          Delete(ph3, 1, 1)  ;
        end;

     if ph3=ph1 then
        begin
          Result:= true ;
          Break ;
        end else result:=false ;
    end;

end;

